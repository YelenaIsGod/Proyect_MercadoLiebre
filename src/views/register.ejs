<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/form.css">
    <title>Iniciar Sesion</title>
</head>
<body>
    <!--HEADER-->
    <%- include('./partials/header.ejs') %>
    <main>
        <div class="form-container">
            <h2 class="form-title">Registro de Usuario</h2>
            <form action="/register" method="POST" class="form">
    
                <div class="inputs-wrapper">
                    <div class="input-item text-input">
                        <label for="nameAndLastname">Nombre y apellido</label>
                        <input type="text" id="nameAndLastname" name="nameAndLastname" required placeholder="Nombre y apellido">
                    </div>
        
                    <div class="input-item">
                        <label for="user">Nombre de usuario</label>
                        <input type="text" id="user" name="user" required placeholder="Nombre de usuario">
                    </div>
        
                    <div class="input-item">
                        <label for="email">Email</label>
                        <input type="text" id="email" name="email" required placeholder="E-mail">
                    </div>
        
                    <div class="input-item">
                        <label for="birthDate">Fecha de nacimiento</label>
                        <input type="date" id="birthDate" name="birthDate" required placeholder="Nombre de usuario">
                    </div>
        
                    <div class="input-item">
                        <label for="address">Domicilio</label>
                        <input type="text" id="address" name="address" required placeholder="Domicilio">
                    </div>
        
                    <div class="input-item">
                        <label for="foto_usuario">Foto de usuario:</label>
                        <input type="file" id="foto_usuario" name="foto_usuario">
                    </div>
                </div>
    
                <div class="inputs-wrapper radio-checkbox">
                    <div class="input-item">
                        <p class="label">Perfil del usuario:</p>
                        <div class="checkbox-container">
                            <label for="vender">Vender</label>
                            <input type="radio" id="vender" name="perfil_usuario" value="vender">
                        </div>
                        <div class="checkbox-container">
                            <label for="comprar">Comprar</label>
                            <input type="radio" id="comprar" name="perfil_usuario" value="comprar">
                        </div>
                    </div>
        
                    <div class="input-item">
                        <p class="label">Intereses</p>
                        <div class="checkbox-container">
                            <label for="electro">Electro</label>
                            <input type="checkbox" id="electro" name="categorias_interes" value="electro">
                        </div>
                        <div class="checkbox-container">
                            <label for="moda">Moda</label>
                            <input type="checkbox" id="moda" name="categorias_interes" value="moda">
                        </div>
                        <div class="checkbox-container">
                            <label for="hogar">Hogar</label>
                            <input type="checkbox" id="hogar" name="categorias_interes" value="hogar">
                        </div>
                        <div class="checkbox-container">
                            <label for="jugueteria">Juguetería</label>
                            <input type="checkbox" id="jugueteria" name="categorias_interes" value="jugueteria">
                        </div>
                        <div class="checkbox-container">
                            <label for="vida_sana">Vida sana</label>
                            <input type="checkbox" id="vida_sana" name="categorias_interes" value="vida_sana">
                        </div>
                        
                    </div>
                </div>
    
                <div class="inputs-wrapper passwords">
                    <div class="input-item">
                    <label for="password">Contraseña</label>
                    <input type="password" id="password" name="password" required placeholder="Contraseña">
                    </div>
            
                    <div class="input-item">
                        <label for="passwordConfirmation">Confirmar contraseña</label>
                        <input type="password" id="passwordConfirmation" name="passwordConfirmation" placeholder="Confirmar contraseña" required>
                    </div>
                </div>
    
                <div class="buttons">
                <button type="reset" class="button danger">Borrar</button>
                <button type="submit" class="button primary">Enviar</button>
                </div>
            </form>
        </div>
    </main>
    <!--FOOTER-->
    <%- include('./partials/footer.ejs') %>
</body>
</html>